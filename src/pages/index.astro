---
import Link from '../components/Link.astro';
import Layout from '../layouts/Layout.astro';
import { Twitter } from "lucide-react";
import { getSong, getSongImage, getSongUrl } from "../lib/utils";
import bigDreams from "../components/images/big-dreams.jpg";
import builder from "../components/images/builder.webp";
import devame from "../components/images/devame.png";
import authdeck from "../components/images/authdeck.png";
import reading from "../components/images/reading.jpg";
import writing from "../components/images/writing.png";

const song = await getSong();
const image = await getSongImage();
const songUrl = await getSongUrl();
---

<Layout title="pybash">
  <main class="flex items-center justify-center flex-col min-h-screen">
    <div class="flex flex-col gap-10 max-w-[90%] md:max-w-[41%]">
      <div class="font-playwrite text-4xl md:text-3xl pt-10 md:pt-0">pybash</div>
      <div class="text-xl leading-9">
        I am a little boy with <Link image={bigDreams}>big dreams</Link>. High schooler by day,
        <Link href="https://github.com/pybash1" image={builder}>builder by night</Link>. Built a few cool things over at <Link href="https://deva.me" image={devame}>10Planet</Link>,
        and <Link href="https://authdeck.xyz" image={authdeck}>Authdeck</Link>.
      </div>
      <div class="text-xl leading-9">
        Sometimes, you'll find me&nbsp;<Link href="https://oku.club/user/pybash" image={reading}>reading</Link>, or
		    listening{song ? <> to&nbsp;<Link href={songUrl} imageLink={image as string}>{song}</Link>&nbsp;</> : ", "}and rarely,&nbsp;<Link href="https://parchments.pybash.xyz" image={writing}>writing</Link>.
      </div>
      <div class="w-fit">
        <a href="https://twitter.com/py_bash1" aria-label="twitter"><Twitter /></a>
      </div>
    </div>
  </main>
</Layout>
