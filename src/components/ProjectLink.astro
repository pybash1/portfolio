---
interface Props {
  name: string;
  link?: string;
  client?: string;
  label?: string;
}

const { link, name, client, label } = Astro.props;
---

<a href={link} class="w-full flex items-center gap-4 justify-between">
  <div>
    {name}
    {
      client ? (
        <span class="text-white/80 text-sm font-neue">for {client}</span>
      ) : null
    }
    {
      label ? (
        <span class="text-white/80 text-sm font-neue">{label}</span>
      ) : null
    }
  </div>
  {
    link ? (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width={1.5}
        stroke="currentColor"
        class="size-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"
        />
      </svg>
    ) : null
  }
</a>
