---
import "@fontsource/libre-caslon-text";
import "@fontsource/libre-caslon-condensed";
import "@fontsource/pirata-one";
import "@fontsource/ramabhadra";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Just a lil boy with dreams" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-paper text-writing min-h-screen selection:bg-writing selection:text-paper font-serif"
  >
    <slot />
  </body>
</html>

<style is:global>
  
</style>
